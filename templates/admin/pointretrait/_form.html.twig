{{ form_start(form) }}
<div class="row">
    <div class="col-6">{{ form_row(form.nom) }}</div>
    <div class="col-6">{{ form_row(form.email) }}</div>
</div>
<div class="row">
    <div class="col-6">
        {{ form_row(form.adresse) }}
        {{ form_row(form.cp) }}
        {{ form_row(form.ville) }}
    </div>
    <div class="col-6">{{ form_row(form.description) }}</div>
</div>
<div class="row">
    <div class="col-6">Jour et Horaires d'ouverture du Point Retrait</div>
</div>
<div class="row">
    <div class="col-2">{{ form_row(form.jour) }}</div>
    <div class="col-2">{{ form_row(form.ouverture) }}</div>
    <div class="col-2">{{ form_row(form.fermeture) }}</div>
</div>
<div class="row">
    <div class="col-6">{{ form_row(form.image) }}</div>
</div>
<div class="row">
    <div class="col-12">
        <button type="submit" class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
        <a href="{{ path('admin.pointretrait.index') }}" class="btn btn-secondary">Retour</a>
    </div>
</div>
{{ form_end(form) }}