{%  extends 'base.html.twig' %}
{% block title "Nos Recettes"%}

{% block body %}
    <div class="row">
    <div class="col-12 mb-5 d-flex justify-content-center">
    <h1>{{ recette.nom }}</h1>
    </div>
    </div>
        <div class="row mb-3">
        <div class="col-5">
    <img style="width:25rem" src="{{ vich_uploader_asset(recette,'image_file') }}">
        </div>
    <div class="col-6  text-justify">

        <p>de {{ recette.auteur.pseudo }}</p>
        <p>{{ recette.descr }}</p>
        <p>Temps de préparation: {{ recette.tpsPrep }} minutes </p>
        <p>Temps de cuisson: {{ recette.tpsCuisson }} minutes</p>
        <p>Recette pour: {{ recette.portion }} personnes</p>
        <p>Difficulté:

            {% for index in 1..recette.difficulte %}
                <img style="width: 1rem" src="./../assets/img/recette/rating/logo2.jpg">
            {% endfor %}
        </p>
        <a href="{{ path('recette_edit', {'id':recette.id}) }}" ><button class="btn btn-success">Modifier</button></a>
        <a href="{{ path('remove_recette', {'id':recette.id}) }}"><button class="btn btn-danger">Supprimer</button></a>
    </div>
        </div>


{% endblock %}