{% extends  'base.html.twig' %}

{% block title 'Profil'%}

{% block body %}
    <h1>Modifier mot de passe</h1>
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger col-8">
            {{ message }}
        </div>
    {% endfor %}
    <div class="col-8">
        <form action="{{ path('profil_edit_password', {'id': app.user.id}) }}" method="post">
            <div class="form-group">
                <label for="mdp">Nouveau mot de passe</label>
                <input class="form-control" type="password" placeholder="Entrez votre mot de passe" name="mdp" id="mdp">
            </div>
            <div class="form-group">
                <label for="mdp2">Confirmation mot de passe</label>
                <input class="form-control" type="password" placeholder="Confirmer votre mot de passe" name="mdp2" id="mdp2">
            </div>
            <button class="btn btn-success" type="submit">Enregister</button>
        </form>
    </div>
{% endblock %}