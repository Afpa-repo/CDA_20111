{% extends  'base.html.twig' %}

{% block title 'Commandes'%}

{% block body %}
    <div class="m-3 col-12 text-center">
        <h1>Vos commandes</h1>
    </div>

    <!-- Basic Card Example -->
    <div class="card shadow m-3">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-dark">Recettes publiées</h6>
        </div>
        <div class="card-body">


                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Produits</th>
                        <th scope="col">Cout total</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for commande in app.user.commande %}
                    <tr>
                        <td> {{ commande.date|date("d/m/Y") }} </td>
                        <td>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Produit</th>
                                        <th>Prix</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for produit in commande.produit %}
                                <tr>
                                    <td>{{ produit.nom }}</td>
                                    <td>Quantité à ajouter</td>
                                    <td>{{ produit.prix }}</td>
                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </td>
                        <td> {{ commande.coutTotal }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>


        </div>
    </div>



{% endblock %}